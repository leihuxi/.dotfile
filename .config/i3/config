# Variables
set $mod Mod4
set $alt Mod1
set $mleft   button1
set $mmiddle button2
set $mright  button3

set $workspace1 workspace number 1
set $workspace2 workspace number 2
set $workspace3 workspace number 3
set $workspace4 workspace number 4
set $workspace5 workspace number 5
set $workspace6 workspace number 6
set $workspace7 workspace number 7
set $workspace8 workspace number 8
set $workspace9 workspace number 9
set $workspace0 workspace number 10

set $color_normal_white  #a89984
set $color_bright_white  #ebdbb2
set $color_normal_gray   #222222
set $color_bright_gray   #3c3836
set $color_bright_yellow #d79921
set $color_normal_black  #282828
set $color_unused        #ff0000

# Color scheme (Gruvbox dark)
# new_window pixel 2
# new_float pixel 2
# Colors                  border                 background             text                   indicator       child_border
client.focused            $color_bright_gray     $color_bright_gray     $color_bright_white    $color_unused   $color_normal_white
client.focused_inactive   $color_bright_gray     $color_bright_gray     $color_bright_white    $color_unused   $color_normal_black
client.unfocused          $color_normal_gray     $color_normal_gray     $color_normal_white    $color_unused   $color_normal_black
client.urgent             $color_bright_yellow   $color_bright_yellow   $color_normal_black    $color_unused   $color_unused
client.placeholder        $color_unused          $color_normal_black    $color_unused          $color_unused   $color_unused

# Font
# font <X core font description>
# font pango:<family list> [<style options>] <size>
font pango:Source Code Pro, EmojiOne Color 12

# Split Window
bindsym $alt+h split horizontal
bindsym $alt+v split vertical

# bindsym [--release] [<Group>+][<Modifiers>+]<keysym> command
# bindcode [--release] [<Group>+][<Modifiers>+]<keycode> command
# Take a screenshot upon pressing $mod+x (select an area)
# bindsym --release $alt+t exec --no-startup-id import /tmp/latest-screenshot.png
bindsym --release $alt+t exec --no-startup-id scrot -s /tmp/latest-screenshot.png

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Want exit i3?' -b 'Yes' 'i3-msg exit'"

# Terminal
bindsym $mod+Return exec alacritty
# bindsym $mod+Return exec kitty

# start neofetch
# bindsym $mod+i exec neofech

# Start rofi (a program launcher)
bindsym $mod+d exec rofi -show run

# Lock Screen
bindsym $alt+l exec --no-startup-id xlock
bindsym $alt+Shift+l exec --no-startup-id ~/.config/i3lock/i3lock.sh

# Start pcmanfm
bindsym $mod+e exec pcmanfm

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec amixer sset Master 5%+
bindsym XF86AudioLowerVolume exec amixer sset Master 5%-
bindsym XF86AudioMute exec amixer sset Master toggle

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# The right button toggles floating
bindsym $mod+$mright floating toggle

# Full Screen
bindsym $mod+f fullscreen toggle

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Close Window
bindsym Control+Mod1+w kill
bindsym $mod+q kill

# Layout change
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+x layout toggle split

# Float or Flat Change
bindsym $mod+space focus mode_toggle

# Switch focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Float Window Change
bindsym $mod+Shift+space floating toggle

# Focus Parent
bindsym $mod+p focus parent

# Focus Child
bindsym $mod+c focus child

# Store Window
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

# move all floating windows to the scratchpad
bindsym $mod+a [floating] move scratchpad

# Reload the configuration file
bindsym $mod+Shift+c reload

# Switch to workspace using number row
bindsym $mod+1 $workspace1
bindsym $mod+2 $workspace2
bindsym $mod+3 $workspace3
bindsym $mod+4 $workspace4
bindsym $mod+5 $workspace5
bindsym $mod+6 $workspace6
bindsym $mod+7 $workspace7
bindsym $mod+8 $workspace8
bindsym $mod+9 $workspace9
bindsym $mod+0 $workspace0
bindsym $mod+Tab workspace back_and_forth

# Move window to workspace using number row
bindsym $mod+Shift+1 move container to $workspace1
bindsym $mod+Shift+2 move container to $workspace2
bindsym $mod+Shift+3 move container to $workspace3
bindsym $mod+Shift+4 move container to $workspace4
bindsym $mod+Shift+5 move container to $workspace5
bindsym $mod+Shift+6 move container to $workspace6
bindsym $mod+Shift+7 move container to $workspace7
bindsym $mod+Shift+8 move container to $workspace8
bindsym $mod+Shift+9 move container to $workspace9
bindsym $mod+Shift+0 move container to $workspace0

# Border
# border normal|pixel|toggle [<n>]
# use window title, but no border
bindsym $mod+t border normal 0
# use no window title and a thick border
bindsym $mod+y border pixel 3
# use neither window title nor border
bindsym $mod+u border none

# config directive
# mode [--pango_markup] <name>
# command
# mode <name>
# Press $mod+o followed by either f, t, Escape or Return to launch firefox,
set $mode_launcher Launch: [c]hromium [i]dea
bindsym $mod+o mode "$mode_launcher"
mode "$mode_launcher" {
    bindsym c exec chromium
    bindsym i exec idea

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# System Command
set $mode_system  Logout(O) Poweroff(S) Reboot(R) Cance(Esc)
bindsym $mod+Shift+q mode "$mode_system"
mode "$mode_system" {
    bindsym o exec i3-msg exit
    bindsym s exec systemctl poweroff
    bindsym r exec systemctl reboot
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# Def rise
# resize window (you can also use the mouse for that)
bindsym $mod+r mode "$resize"
mode "$resize" {
    # same bindings, but for the arrow keys
    bindsym h resize shrink width 10 px or 1 ppt
    bindsym j resize grow height 10 px or 1 ppt
    bindsym k resize shrink height 10 px or 1 ppt
    bindsym l resize grow width 10 px or 1 ppt
    bindsym s mode "default", exec --no-startup-id ~/.config/i3/scripts/slopsize.sh
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Float Window
# floating_modifier <Modifier>
floating_modifier $mod

# Constraining floating window sizj
# floating_minimum_size <width> x <height>
# floating_maximum_size <width> x <height>
floating_minimum_size 75 x 50
floating_maximum_size -1 x -1

# Orientation for new workspaces
# default_orientation horizontal|vertical|auto
default_orientation vertical

# Layout mode for new containers
# workspace_layout default|stacking|tabbed
workspace_layout tabbed

# Window title alignment
# title_align left|center|right
title_align left

# Default border style for new windows
# default_border normal|none|pixel
# default_border normal|pixel <px>
# default_floating_border normal|none|pixel
# default_floating_border normal|pixel <px>
default_border pixel 0
default_floating_border pixel

# Hiding borders adjacent to the screen edges
# hide_edge_borders none|vertical|horizontal|both|smart
hide_edge_borders both

# Arbitrary commands for specific windows (for_window)
# for_window <criteria> <command>
# for_window [title="~/work"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable

for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

# for_window [class="Chromium"] floating enable sticky enable
for_window [class="(?i)qemu-system"] floating enable
for_window [class="(?i)VirtualBox" title="(?i)Manager"] floating enable
for_window [class="(?i)VirtualBox"] floating enable
for_window [class="(?i)arand"] floating enable
for_window [class="(?i)nm-connection-editor"] floating enable
for_window [class="(?i)pcmanfm"] floating enable


# Don’t focus window upon opening
# no_focus <criteria>
no_focus [window_role="pop-up"]

# Automatically putting clients on specific workspaces
# assign <criteria> [→] [workspace] [number] <workspace>
# assign <criteria> [→] output left|right|up|down|primary|<output>
# assign [class="alacritty"] $workspace1
# assign [class="chromium"] $workspace2
assign [class="Chromium"] $workspace3
assign [class="jetbrains-idea-ce"] $workspace4

# Interprocess communication
ipc-socket ~/.config/i3/i3-ipc.sock

# Focus Follow
# focus_follows_mouse yes|no
focus_follows_mouse no

# Mouse warping
# mouse_warping output|none
mouse_warping none

# Popups during fullscreen mode
# popup_during_fullscreen smart|ignore|leave_fullscreen
popup_during_fullscreen smart

# Focus wrapping
# focus_wrapping yes|no|force

# Automatic back-and-forth when switching to the current workspace
# workspace_auto_back_and_forth yes|no
workspace_auto_back_and_forth yes

# Delaying urgency hint reset on workspace change
# force_display_urgency_hint <timeout> ms
force_display_urgency_hint 500 ms

# Focus on window activation
# focus_on_window_activation smart|urgent|focus|none
focus_on_window_activation smart

# Drawing marks on window decoration
# show_marks yes|no
show_marks yes

# Bar
bindsym $mod+m bar mode toggle
bar {
        # i3bar_command i3bar -t
        status_command py3status -c ~/.config/py3status/py3status.conf
        position bottom
        modifier Shift
        separator_symbol "]["
        strip_workspace_numbers yes
        height 24
        colors {
            background #000000CC
            statusline #000000FF
            separator #B8F788
            focused_workspace  #B8F788 #000000AA
            active_workspace   #FFFFFF #FFFFFFAA
            inactive_workspace #AAAAAA #000000AA #AAAAAA
            urgent_workspace   #E57B85 #000000AA
        }
}

# i3-Gap Use
gaps inner 0
gaps outer 0
smart_gaps on
smart_borders on

# Auto Start
# exec --no-startup-id i3-msg "workspace 1:Main"
# exec_always xrandr --output DP1 --auto --top-of eDP1
# exec i3-config-wizard
exec_always pulseaudio --start -D
exec_always --no-startup-id feh --bg-fill --fullscreen --auto-zoom ~/.config/i3/wallpaper/apocalyptic-hipster.jpg
exec_always xrandr --output DP1 --pos 0x0 --output eDP1 --pos 0x1080
exec_always amixer sset Master on
exec_always fcitx
exec_always sogou-qimpanel
exec_always xset r rate 250 40
exec_always xset m 4/1 0
exec_always --no-startup-id dunst -config ~/.config/dunst/dunstrc
exec_always --no-startup-id albert
exec_always --no-startup-id copyq
exec_always compton -b --config ~/.config/compton/compton.conf
